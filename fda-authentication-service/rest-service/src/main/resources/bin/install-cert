#!/bin/bash
KEY_STORE_LOCATION="./rest-service/src/main/resources/ssl/dbrepo.p12"
KEY_STORE_ALIAS="dbrepo"
KEY_STORE_PASS="dbrepo"

# REQUEST
certbot certonly --standalone --preferred-challenges http -d dbrepo.ossdip.at \
		-m martin.weise@tuwien.ac.at --agree-tos

# CONVERT TO PKCS12
openssl pkcs12 -export -in server.crt -inkey /etc/letsencrypt/live/dbrepo.ossdip.at/privkey.pem \
               -out "${KEY_STORE_LOCATION}" -name "${KEY_STORE_ALIAS}" \
               -CAfile /etc/letsencrypt/live/dbrepo.ossdip.at/cert.pem -caname root